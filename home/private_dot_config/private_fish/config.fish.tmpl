set -g fish_greeting
set -x GPG_TTY (tty)
set -x EDITOR hx

set -g fish_user_paths \
    {{ if .homebrew }}
    "{{ .homebrewPrefix }}/bin" \
    "{{ .homebrewPrefix }}/sbin" \
    {{ end -}}
    "/usr/local/bin" \
    "/usr/bin" \
    "/bin" \
    "/usr/sbin" \
    "/sbin" \
    "/usr/local/sbin" \
    "$HOME/.cargo/bin" \
    "$HOME/bin" \
    "$HOME/.krew/bin" \
    "$HOME/go/bin" \
    "$fish_user_paths"

{{ if .homebrew }}
    eval ({{ .homebrewPrefix }}/bin/brew shellenv)
{{ end }}

test -e ~/.asdf/asdf.fish && source ~/.asdf/asdf.fish

# test if etd/bass is installed
if type -q bass
    # somewhat hacky nix support: https://github.com/NixOS/nix/issues/1512#issuecomment-1231855853
    bass source '/nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh'
end

{{- if eq .chezmoi.os "linux" }}
alias aws-vault "aws-vault --backend=pass"

# for hx
set -x COLORTERM truecolor
{{- end -}}
